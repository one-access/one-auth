# Server Port
SERVER_PORT=8080

# MySQL Database Configuration
MYSQL_DB_URL=jdbc:mysql://localhost:3306/test?useSSL=false&serverTimezone=UTC&useLegacyDatetimeCode=false&allowPublicKeyRetrieval=true
MYSQL_DB_USERNAME=root
MYSQL_DB_PASSWORD=root

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your.email@gmail.com
MAIL_PASSWORD=your-app-password

# OAuth2 Credentials
GOOGLE_CLIENT_ID=your-google-client-id
